{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${command:python.interpreterPath}",
      "program": "${workspaceRoot}/manage.py",
      "args": [
          "runserver",
          "--no-color",
          "--noreload"
      ],
      "debugOptions": [
          "WaitOnAbnormalExit",
          "WaitOnNormalExit",
          "RedirectOutput",
          "DjangoDebugging"
      ]
  }
  ]
}
